@using TDL_ASP.Utilities;
@model ToDoTask



<form method="post" asp-action="Edit">
	<div class="container p-2">
		<div class="row justify-content-evenly">
			<div class="col-6 col-lg-3">
				<label asp-for="Priority" class="w-100 text-center bg-primary p-2"></label>
				<select class="form-select" asp-for="Priority" style="height:45px;">
					<option value="@PriorityEnum.High" class="bg-danger">High</option>
					<option value="@PriorityEnum.Medium" class="bg-warning">Medium</option>
					<option value="@PriorityEnum.Low" class="bg-success">Low</option>
					<option value="@PriorityEnum.FreeTime" class="bg-light" selected>Free Time</option>
				</select>
			</div>
			<div class="col-6 col-lg-4">
				<label asp-for="Name" class="w-100 text-center bg-primary p-2"></label>
				<input typle="text" autocomplete="off" asp-for="Name" class="w-100 p-2" style="height:45px;"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="col-5 col-lg-2 mt-3 mt-lg-0">
				<label asp-for="Status" class="w-100 text-center bg-primary p-2"></label>
				<select class="form-select" asp-for="Status" style="height:45px;">
					<option value="0%" class="bg-danger" selected>0%</option>
					<option value="25%" class="bg-danger">25%</option>
					<option value="50%" class="bg-danger">50%</option>
					<option value="75%" class="bg-warning">75%</option>
					<option value="100%" class="bg-success">100%</option>
				</select>
			</div>
			<div class="col-5 col-lg-3 mt-3 mt-lg-0">
				<label asp-for="Deadline" class="w-100 text-center bg-primary p-2"></label>
				<input typle="date" autocomplete="off" asp-for="Deadline" class="w-100 p-2" style="height:45px;"/>
				<span asp-validation-for="Deadline" class="text-danger"></span>
			</div>
		</div>

		<div class="row my-2 my-lg-3 justify-content-evenly">
			<div class="col-3 col-lg-2 mt-3 mt-lg-0">

			</div>

			<div class="col-12 col-lg-6 mt-3 mt-lg-0">
				<label asp-for="Description" class="w-100 text-center bg-primary p-2"></label>
				<textarea typle="text" autocomplete="off" asp-for="Description" class="w-100 p-2" style="height:70px;"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="col-3 col-lg-0">

			</div>

			<div class="col-2 d-flex justify-content-evenly">
				<a asp-controller="ToDoTask" asp-action="Index" class="btn btn-danger px-4" style="max-height:50px;">Cancel</a>
				<button type="submit" class="btn btn-submit bg-success text-light" style="max-height:50px;" onclick="displayErrors()">Update</button>
			</div>
			<div class="col-8 d-lg-none">

			</div>
		</div>
		<div class="row my-2 my-lg-3">
			<h3 id="validation_header">Validation:</h3>
			<div id="validation_content" class="col-10 col-lg-5 text-danger" asp-validation-summary="All">

			</div>
		</div>
	</div>
</form>



<script>
	validation_header = document.getElementById("validation_header");
	validation_content = document.getElementById("validation_content");
	if(validation_content.children[0].children[0].style["display"] == "none"){
			validation_header.style.display = "none";
	}

	function displayErrors(){
		validation_header.style.display = "block";
	}

</script>


@section Scripts{ 
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
